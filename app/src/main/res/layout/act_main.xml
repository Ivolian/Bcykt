<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="班车一卡通"
        android:textColor="@color/material_white"
        android:textSize="18dp" />

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/smartTab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorAccent"
        app:stl_defaultTabBackground="@android:color/transparent"
        app:stl_defaultTabTextColor="@color/material_white"
        app:stl_defaultTabTextSize="14dp"
        app:stl_distributeEvenly="true"
        app:stl_dividerThickness="0dp"
        app:stl_indicatorColor="#2965A0"
        app:stl_indicatorCornerRadius="13dp"
        app:stl_indicatorGravity="center"
        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorThickness="26dp"
        app:stl_indicatorWidth="60dp"
        app:stl_overlineThickness="0dp"
        app:stl_underlineThickness="0dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
